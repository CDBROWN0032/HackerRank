function main() {
    git remote add origin https://github.com/CDBROWN0032/HackerRank-10-Days-of-Javascript.git
    const PI = Math.PI;
    var r = readLine();

    // Print the area of the circle:
    function area(r){
        return Math.pow(r,2)*PI;
    }
    // Print the perimeter of the circle:
    function peri(r){
        return 2*PI*r;
    }
    console.log(area(r));
    console.log(peri(r));
